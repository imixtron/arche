{
  "name": "arche",
  "version": "1.0.0",
  "description": "Boilerplate to quickstart Node.js with TypeScript.",
  "engines": {
    "node": ">= 16.13 <17"
  },
  "scripts": {
    "build": "yarn tsc",
    "start": "node --enable-source-maps dist/index.js",
    "dev": "concurrently \\\"yarn tsc --watch\\\" \\\"nodemon -q dist/index.js\\\"",
    "test": "yarn nyc ./node_modules/.bin/_mocha 'test/**/*.test.ts'"
  },
  "author": "imixtron (imaadabbbasi@gmail.com)",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@testdeck/mocha": "^0.3.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.14",
    "@types/node": "^18.11.9",
    "@types/winston": "^2.4.4",
    "chai": "^4.3.7",
    "concurrently": "^7.5.0",
    "jest": "^29.3.1",
    "mocha": "^10.1.0",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "winston": "^3.8.2"
  }
}
